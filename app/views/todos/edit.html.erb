<h1>Edit a New Task</h1>
<%= form_for @todo, :html => {class: 'form-horizontal'} do |f| %>

	<div class="form-group">
	<%= f.label :task, class: 'col-sm-2 control-label' %>
	<div class="col-sm-9">
		<%= f.text_field :task, class: 'form-control'%>
	</div>
	</div>

	<div class="form-group">
	<%= f.label :priority, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.select :priority, @priorities, class: 'form-control' %>
	</div>
	</div>

	<div class="form-group">
	<%= f.label :status, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.select :status, @statuses, class: 'form-control'	 %>
	</div>
	</div>

	<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit "Update", class: 'btn btn-default' %>
	</div>
	</div>
<% end %>